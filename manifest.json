{
    "manifest_version": 3,
    "name": "Gruntled",
    "description": "Record your reaction",
    "version": "1.0",
    "author": "Priscilla Lee, Ricky G",
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/watch*"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["inject-webcam.js"],
            "matches": ["<all_urls>"]
        }
    ],
    "permissions": [
        "scripting",
        "activeTab",
        "declarativeContent",
        "tabs",
        "storage",
        "identity"
    ],
    "background": {
        "service_worker": "background.js"
    }
}
